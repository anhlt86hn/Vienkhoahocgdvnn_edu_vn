@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<VKHGDDTNN.Models.sp_News_GetByAll_Result>

<!--Sử dụng cho Phân trang-->
<link href="~/Content/PagedList.css" rel="stylesheet" />

<!--Phân trang-->
@Html.PagedListPager(Model, trang => Url.Action("Index", "News", new { trang = trang, currentGroupNewsFilter = ViewBag.CurrentGroupNewsFilter, currentNewsNameFilter = ViewBag.CurrentNewsNameFilter, currentNewsAmount = ViewBag.CurrentProductAmount, sortName = ViewBag.CurrentSortName, sortGroup = ViewBag.CurrentSortGroup }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
    {
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        DisplayLinkToIndividualPages = true,
        DisplayPageCountAndCurrentLocation = false,
        MaximumPageNumbersToDisplay = 5,
        DisplayEllipsesWhenNotShowingAllPageNumbers = true,
        EllipsesFormat = "&#8230;",
        LinkToFirstPageFormat = "Trang đầu",
        LinkToPreviousPageFormat = "«",
        LinkToIndividualPageFormat = "{0}",
        LinkToNextPageFormat = "»",
        LinkToLastPageFormat = "Trang cuối",
        PageCountAndCurrentLocationFormat = "Page {0} of {1}.",
        ItemSliceAndTotalFormat = "Showing items {0} through {1} of {2}.",
        FunctionToDisplayEachPageNumber = null,
        ClassToApplyToFirstListItemInPager = null,
        ClassToApplyToLastListItemInPager = null,
        ContainerDivClasses = new[] { "pagination-container" },
        UlElementClasses = new[] { "pagination" },
        LiElementClasses = Enumerable.Empty<string>()
    }, new AjaxOptions { UpdateTargetId = "DataTable" }))


