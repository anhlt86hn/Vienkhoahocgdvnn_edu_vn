<!--Ajax sử dụng sửa dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(function () {
        $('#msg').hide();

        // Ajax sử dụng cho change active
        $(".Active").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/admin/bai-viet/sua-trang-thai", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change index
        $(".Index").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/admin/bai-viet/sua-hien-thi-trang-chu", { "id": Id },
            //$.post("/News/ChangeIndex", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change Name
        $(".Namep").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tên.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/admin/bai-viet/sua-truc-tiep", { "id": id, "name": name },
                     //$.post("/News/ChangeName", { "id": id, "name": name },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change thứ tự
        $(".Ord").change(function () {
            var id = $(this).attr("id");
            var ord = $(this).val();
            if (ord == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tên.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/admin/bai-viet/sua-truc-tiep", { "id": id, "order": ord },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

       

    });

    function clearUpdateMessage() {
        $('#update-message').text("");
    }

    function htmlDecode(value) {
        if (value) {
            return $('<div />').html(value).text();
        }
        else {
            return '';
        }
    }
</script>

