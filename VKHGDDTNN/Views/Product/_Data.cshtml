@model PagedList.IPagedList<VKHGDDTNN.Models.sp_Product_GetByAll_NameGroup_Result>

@{
    Layout = null;
}

<!--Sử dụng cho Confirm delete-->
<script type="text/javascript">
    $(document).ready(function () {
        $(".yesno").easyconfirm({
            locale: { title: 'Xóa sản phẩm', button: ['Hủy', 'Xóa'] }
        });
    })
</script>

<!--Ajax sử dụng sửa dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(function () {
        $('#msg').hide();

        // Ajax sử dụng cho change active
        $(".Active").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeActive", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change inventory
        $(".Inventory").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeInventory", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change Tag
        $("#Tag").click(function () {
            clearUpdateMessage();
            $.post("/Product/ChangeTag", {"id": 0},
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change index
        $(".Index").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeIndex", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change status
        $(".Status").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeStatus", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        // Ajax sử dụng cho change ord
        $(".Ord").change(function () {
            var id = $(this).attr("id");
            var ord = $(this).val();
            if (ord == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập thứ tự.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "ord": ord },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change Name
        $(".Namep").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tên sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "name": name },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });


        // Ajax sử dụng cho change Num
        $(".Num").change(function () {
            var id = $(this).attr("id");
            var num = $(this).val();
            if (num == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập số lượng.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "num": num },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change PricePromotion
        $(".PricePromotion").change(function () {
            var id = $(this).attr("id");
            var pricePromotion = $(this).val();
            if (pricePromotion == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá bán buôn.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "pricePromotion": pricePromotion },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change PriceRetail
        $(".PriceRetail").change(function () {
            var id = $(this).attr("id");
            var priceRetail = $(this).val();
            if (priceRetail == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá bán lẻ.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "priceRetail": priceRetail },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change Code
        $(".Code").change(function () {
            var id = $(this).attr("id");
            var code = $(this).val();
            if (code == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập mã sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "code": code },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

    

    });

    function clearUpdateMessage() {
        $('#update-message').text("");
    }

    function htmlDecode(value) {
        if (value) {
            return $('<div />').html(value).text();
        }
        else {
            return '';
        }
    }
</script>

<!--Thay đổi chiều mũi tên khi sắp xếp-->
<script type="text/javascript">
    $(document).ready(function () {

        var currentSortOrder = '@ViewBag.CurrentSortOrder';
            if (currentSortOrder == "ord asc") {
                $('#ord').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#ord').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortName = '@ViewBag.CurrentSortName';
            if (currentSortName == "name asc") {
                $('#name').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#name').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortGroup = '@ViewBag.CurrentSortGroup';
            if (currentSortGroup == "group asc") {
                $('#group').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#group').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortPriceRetail = '@ViewBag.CurrentSortPriceRetail';
            if (currentSortPriceRetail == "priceretail asc") {
                $('#priceretail').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#priceretail').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortPricePromotion = '@ViewBag.CurrentSortPricePromotion';
            if (currentSortPricePromotion == "pricepromotion asc") {
                $('#pricepromotion').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#pricepromotion').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }


        })
</script>

<!--Ajax sử dụng sắp xếp dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(document).ready(function () {

        // Ajax sử dụng sắp xếp sản phẩm theo tên
        $('#name').click(function () {
            var sortName = '@ViewBag.SortNameParm';
            var currentProductAmount = '@ViewBag.CurrentProductAmount';
            $.post("/Product/SortByName", { "sortName": sortName, "currentProductAmount": currentProductAmount },
                function (data) {
                    $("#DataTable").html(data);
                });
        });

    });
</script>

<div id="DataTable">
    <div class="row-fluid">
        <div class="span3">
            <div style="margin-top: 18px;">
                Tổng số sản phẩm: <span style='color: #A52A2A;'>@ViewBag.TotalProduct</span>
            </div>
        </div>
        <div class="span9">
            <div class="pagedlist-top">
                <!--Partial View phân trang-->
                @Html.Partial("_Paging")
                </div>

                <input name="mPage" id="mPage" value="@ViewBag.mPage" hidden="hidden" />
                <input name="PageSize" id="PageSize" value="@ViewBag.PageSize" hidden="hidden" />
                <input type="submit" name="Tag" id="Tag" value="Tag" hidden="hidden" />
            </div>
    </div>
    <div>
        <!--Hiển thị sản phẩm-->
        <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="grvProducts" style="border-collapse: collapse;">
            <tr>
                <th scope="col" class="CheckBoxsmall" style="text-align: center; width: 20px;">
                    <input type="checkbox" onclick="Javascript: chkSelectAll_OnClick(this)" id="chkSelectAll" name="checkAll" />
                </th>
                <th class="number" style="width: 100px;">Mã sản phẩm</th>
                <th scope="col" class="number" style="width: 50px;">Ảnh</th>
                <th scope="col" id="name" class="NumberOrdDown">
                    @Html.Label("Tên sản phẩm", new { style = "color:#646464; text-decoration:none;text-align: center;" })
                </th>
                <th scope="col" id="group" class="NumberOrdDown" style="width: 180px;">
                    @Html.ActionLink("Tên Danh mục sản phẩm", "", new { sortGroup = ViewBag.SortGroupParm }, new { style = "color:#646464; text-decoration:none;" })
                </th>
                
                <th scope="col" id="ord" class="number NumberOrdDown" style="width: 30px;">
                    @Html.ActionLink("Thứ tự", "Ord", new { style = "color:#646464; text-decoration:none;" })
                </th>

                <th scope="col" id="inventory" class="number NumberOrdDown" style="width: 30px;">
                    @Html.ActionLink("Còn hàng", "Inventory", new { sortPriceRetail = ViewBag.SortPriceRetailParm }, new { style = "color:#646464; text-decoration:none;" })
                </th>
                <th scope="col" id="priceretail" class="number NumberOrdDown" style="width: 100px;">
                    @Html.ActionLink("Giá chính", "PriceRetail", new { sortPriceRetail = ViewBag.SortPriceRetailParm }, new { style = "color:#646464; text-decoration:none;" })
                </th>
                <th scope="col" id="pricepromotion" class="number NumberOrdDown" style="width: 100px;">
                    @Html.ActionLink("Giá khuyến mại", "PricePromotion", new { sortPricePromotion = ViewBag.SortPricePromotionParm }, new { style = "color:#646464; text-decoration:none;" })
                </th>
                <th scope="col" class="number" style="width: 60px;">Trang chủ</th>
                <th scope="col" class="number" style="width: 60px;">Kích hoạt</th>
                <th scope="col" class="number" style="width: 100px; text-align: center">Chức năng</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr style="background-color: #fff">
                    <td style="text-align: center">
                        @Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class = "chk" })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.TextBox("CodeSp" + Model[i].Id, @Model[i].Code, new { @style = "width:100px; text-align:center;", @class = "Code", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        <img width="40px" src="@Model[i].Image" alt="@Model[i].Name"/>
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.TextBox("Namep" + Model[i].Id, @Model[i].Name, new { @style = "width:300px; text-align: center; font-weight:bold;", @class = "Namep",  @id = @Model[i].Id})
                    </td>
                    <td style="vertical-align: middle;width:180px;text-align:center;">
                        @Model[i].Expr1
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.TextBox("Ord" + Model[i].Id, Model[i].Ord, new { @style = "width:50px; text-align: center", @class = "Ord", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.CheckBox("Inventory" + Model[i].Id, (Model[i].Inventory==true)?true:false, new { @style = "width:30px; text-align: center", @class = "chk Inventory", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.TextBox("Retail" + Model[i].Id, @Model[i].PriceRetail, new { @style = "width:80px; text-align: center", @class = "PriceRetail", @id = @Model[i].Id, onblur = "this.value=formatNumber(this.value,'#,###','')", onfocus = "this.value=remote_format(this.value)" })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.TextBox("Promotion" + Model[i].Id, @Model[i].PricePromotion, new { @style = "width:80px; text-align: center", @class = "PricePromotion", @id = @Model[i].Id, onblur = "this.value=formatNumber(this.value,'#,###','')", onfocus = "this.value=remote_format(this.value)" })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">

                        @Html.CheckBox("chkIndex" + Model[i].Id, (Model[i].Index == true) ? true : false, new { @class = "chk Index", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">

                        @Html.CheckBox("chkActive" + Model[i].Id, (Model[i].Active == true) ? true : false, new { @class = "chk Active", @id = @Model[i].Id })
                    </td>

                    <td class="text-center" style="vertical-align: middle;">
                        <a href="/admin/san-pham/xem-Image?id=@Model[i].Id" class="action-link-button"
                            title="Xem chi tiết sản phẩm này"><i class="icon-picture"></i></a>
                        <a href="/admin/san-pham/sua?id=@Model[i].Id" class="action-link-button"
                                                title="Chỉnh sửa sản phẩm này"><i class="icon-edit"></i></a>

                        <a href="/admin/san-pham/xoa?id=@Model[i].Id&trang=@ViewBag.mPage&kichco=@ViewBag.PageSize" class="yesno action-link-button"
                                                title="Bạn chắc chắn muốn xóa sản phẩm này ?"><i class="icon-trash"></i></a>


                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="pagedlist-bottom">
        <!--Partial View phân trang-->
        @Html.Partial("_Paging")
        </div>

        <div style="clear: both;"></div>
    </div>
